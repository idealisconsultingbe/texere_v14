<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form Views -->
    <record id="stock_product_lot_reception_form_view_form" model="ir.ui.view">
        <field name="name">stock.product.lot.reception.form.view.form</field>
        <field name="model">stock.production.lot.reception.form</field>
        <field name="arch" type="xml">
            <form string="Reception and Release Form" create="0">
                <header>
                    <button name="send_form" string="Send Form" context="{'send_form': True}" states="confirmed" type="object" class="oe_highlight" groups="base.group_user"/>
                    <button name="sign_form" string="Release and Sign" states="sent" context="{'form_lot_status': 'released'}" type="object" class="oe_highlight" groups="quality.group_quality_user"/>
                    <button name="sign_form" string="Reject and Sign" states="sent" context="{'form_lot_status': 'rejected'}" type="object" class="oe_highlight" groups="quality.group_quality_user"/>
                    <button name="%(action_close_reception_form)d" string="Close Form" attrs="{'invisible': ['|', ('state', '!=', 'approved'), ('type', '!=', 'rc_with_qc')]}" type="action" class="oe_highlight" groups="quality.group_quality_user"/>
<!--                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" groups="base.group_user"/>-->
                    <field name="state" widget="statusbar" statusbar_visible="confirmed,sent,approved,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <strong><field name="type"/></strong>
                        <h1>
                            <label for="name" class="oe_edit_only"/>
                            <field name="name"/>
                        </h1>
                        <div class="o_row" attrs="{'invisible': [('type', '!=', 'qc_result')]}">
                            <label for="parent_id" string="Parent"/>
                            <field name="parent_id"/>
                        </div>
                    </div>
                    <group>
                        <group string="General Information">
                            <field name="lot_id"/>
                            <field name="picking_id" string="Transfer Origin"/>
                            <field name="purchase_id"/>
                            <field name="partner_id" string="Supplier"/>
                            <field name="product_id"/>
                            <field name="product_categ_id"/>
                        </group>
                        <group string="Status and Identification">
                            <field name="lot_status"/>
                            <field name="storage_temperature"/>
                            <label for="items_stored"/>
                            <div class="o_row">
                                <field name="items_stored"/>
                                <span attrs="{'invisible': [('items_stored', '=', False)]}"> Storage Location:</span>
                                <field name="storage_location" attrs="{'invisible': [('items_stored', '=', False)], 'required': [('items_stored', '=', True)]}"/>
                            </div>
                        </group>
                        <group string="Reception" colspan="2" col="4">
                            <field name="arrival_date"/>
                            <field name="expiration_date"/>
                            <label for="product_qty"/>
                            <div class="o_row">
                                <field name="product_qty"/>
                                <field name="product_uom_id"/>
                            </div>
                            <field name="packaging_state"/>
                            <field name="specification_reference"/>
                            <field name="ordered_consistency"/>
                            <field name="received_consistency"/>
                            <field name="form_appendix" string="CoA Appendix"/>
                            <field name="temperature_appendix"/>
                            <field name="materials_conformity"/>
                            <field name="reception_comment" colspan="4" attrs="{
                            'invisible': [('received_consistency', '!=', 'not_consistent'), ('ordered_consistency', '!=', 'not_consistent'), ('materials_conformity', '!=', 'criteria_not_met')], 'required': ['|', '|', ('received_consistency', '=', 'not_consistent'), ('ordered_consistency', '=', 'not_consistent'), ('materials_conformity', '=', 'criteria_not_met')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Parent Information" attrs="{'invisible': [('type', '!=', 'rc_with_qc')]}">
                            <group string="Reconciliation">
                                <group colspan="2" col="4">
                                    <field name="total_qty_tested"/>
                                    <field name="reconciliation_consistency"/>
                                    <field name="reconciliation_comment" colspan="4" attrs="{'invisible': [('reconciliation_consistency', '!=', 'not_consistent')], 'required': [('reconciliation_consistency', '=', 'not_consistent')]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="QC Results" attrs="{'invisible': [('type', '!=', 'rc_with_qc')]}">
                            <group>
                                <field name="child_ids" nolabel="1">
                                    <tree>
                                        <!-- TODO: add text decoration ? -->
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree Views -->
    <record id="stock_product_lot_reception_form_view_tree" model="ir.ui.view">
        <field name="name">stock.product.lot.reception.form.view.tree</field>
        <field name="model">stock.production.lot.reception.form</field>
        <field name="arch" type="xml">
            <tree string="Reception and Release Form" create="0">
                <field name="name"/>
                <field name="type"/>
                <field name="lot_id"/>
                <field name="lot_status" string="Lot Status"/>
                <field name="state" string="Form Status"/>
            </tree>
        </field>
    </record>

    <!-- Search Views -->
    <record id="reception_and_release_form_view_search" model="ir.ui.view">
        <field name="name">reception.and.release.form.view.search</field>
        <field name="model">stock.production.lot.reception.form</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Form Name"/>
                <field name="lot_id" string="Lot Name" filter_domain="[('lot_id.name', 'ilike', self)]"/>
                <separator />
                <filter string="Confirmed" name="filter_rr_confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Sent" name="filter_rr_sent" domain="[('state', '=', 'sent')]"/>
                <filter string="approved" name="filter_rr_approved" domain="[('state', '=', 'approved')]"/>
                <filter string="closed" name="filter_rr_closed" domain="[('state', '=', 'closed')]"/>
                <separator />
                <filter string="Released" name="filter_rr_lot_released" domain="[('lot_status', '=', 'released')]"/>
                <filter string="Rejected" name="filter_rr_lot_rejected" domain="[('lot_status', '=', 'rejected')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_type" string="By Type" context="{'group_by': 'type'}"/>
                    <filter name="group_by_state" string="By Form Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_lot_status" string="By Lot Status" context="{'group_by': 'lot_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_reception_form" model="ir.actions.act_window">
        <field name="name">Release and Reception Form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.production.lot.reception.form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('stock_product_lot_reception_form_view_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('stock_product_lot_reception_form_view_form')})]"/>
    </record>

    <!-- Menu -->
    <menuitem id="reception_and_release_form_list_menu" name="Reception and Release Forms" action="action_reception_form"
        parent="stock.menu_stock_inventory_control" sequence="999"/>
</odoo>
