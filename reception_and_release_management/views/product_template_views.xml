<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.temperature.specification.reference</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <label for="storage_temperature"/>
                <div class="o_row">
                    <field name="storage_temperature"/>
                    <span attrs="{'invisible': [('storage_temperature', '!=', 'rt')]}">Value</span>
                    <field name="manual_temperature" attrs="{'invisible': [('storage_temperature', '!=', 'rt')]}"/>
                </div>
            </xpath>
            <group name="group_general">
            </group>
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="specification_ref" placeholder="ie: 123/45 (should respect .../.. pattern)"/>
            </xpath>
        </field>
    </record>
</odoo>
