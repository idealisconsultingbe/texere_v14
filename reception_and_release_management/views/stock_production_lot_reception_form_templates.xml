<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="reception_form_body_message">
        <div style="margin: 0px; padding: 0px; font-size: 13px;">
            <p>
                <t t-if="new_record">
                    A new Release and Reception Form has been created in <t t-esc="'to close' if state == 'to_close' else state"/> state.<br />
                </t>
                <t t-else="">
                    Release and Reception Form <t t-esc="res_name"/> is now <t t-esc="'to close' if state == 'to_close' else state"/>.<br />
                </t>
            </p>
            <p style="margin: 16px 0px 16px 0px;">
                <center>
                    <a t-att-href="access_link" t-att-data-oe-model="res_model" t-att-data-oe-id="res_id"
                    style="background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                    View Form <t t-if="new_record" t-esc="model_description or 'document'"/><t t-else="" t-esc="res_name"/>
                    </a>
                </center>
            </p>
        </div>
    </template>

</odoo>