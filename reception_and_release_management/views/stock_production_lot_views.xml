<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">view_production_lot_form_inherited_reception_and_release_form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_reception_forms" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('product_critical_level', 'not in', ['intermediary', 'less_critical', 'critical'])]}">
                    <div class="o_field_widget o_stat_info">
                        <field name="product_critical_level" invisible="1"/>
                        <span class="o_stat_value"><field name="reception_form_count"/></span>
                        <span class="o_stat_text">Forms</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
