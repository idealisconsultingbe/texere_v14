<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view.picking.form.inherited.button.reception.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_confirm']" position="before">
                <field name="count_lots_to_process" invisible="1"/>
                <field name="count_lots_to_validate" invisible="1"/>
                <button name="open_create_reception_form" string="Create and Send Reception Forms" type="object" attrs="{'invisible': ['|', '|', ('state', '!=', 'done'), ('picking_type_code', '!=', 'incoming'), ('count_lots_to_process', '&lt;', 1)]}" class="oe_highlight" groups="base.group_user"/>
                <button name="open_create_reception_form" string="Validate Reception Forms" type="object" context="{'form_validation': True}" class="oe_highlight" attrs="{'invisible': ['|', '|', '|', ('quality_check_todo', '=', False), ('state', 'in', ('done', 'cancel')), ('picking_type_code', '!=', 'internal'), ('count_lots_to_validate', '&lt;', 1)]}" groups="quality.group_quality_user"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_lots" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': ['|', ('state', '!=', 'done'), ('picking_type_code', '!=', 'incoming')]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="count_lots_to_process"/></span>
                        <span class="o_stat_text">Lots to Process</span>
                    </div>
                </button>
                <field name="quality_check_todo" invisible="1"/>
                <button type="object" name="action_view_lots" context="{'show_lots_to_validate': True}" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': ['|', ('quality_check_todo', '=', False), ('state', 'in', ('done', 'cancel'))]}" groups="quality.group_quality_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="count_lots_to_validate"/></span>
                        <span class="o_stat_text">Lots to Validate</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>