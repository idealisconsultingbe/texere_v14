<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view.picking.form.inherited.button.reception.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <div class="alert alert-warning" role="alert" style="margin-bottom:0px;"
                     attrs="{'invisible': [('count_lots_to_process', '=', 0)]}">
                    <field name="count_lots_message"/>
                    <button name="open_create_reception_form" string="Create RR Forms" type="object" class="oe_link oe_inline" groups="base.group_user"/>
                </div>
            </xpath>
            <xpath expr="//header/button[@name='action_confirm']" position="before">
                <field name="count_lots_to_process" invisible="1"/>
                <field name="count_lots_to_validate" invisible="1"/>
                <button name="open_create_reception_form" string="Create and Send Reception Forms" type="object" attrs="{'invisible': ['|', '|', ('state', '!=', 'done'), ('picking_type_code', '!=', 'incoming'), ('count_lots_to_process', '&lt;', 1)]}" class="oe_highlight" groups="base.group_user"/>
                <button name="open_create_reception_form" string="Validate Reception Forms" type="object" context="{'form_validation': True}" class="oe_highlight" attrs="{'invisible': ['|', '|', '|', ('quality_check_todo', '=', False), ('state', 'in', ('done', 'cancel')), ('picking_type_code', '!=', 'internal'), ('count_lots_to_validate', '&lt;', 1)]}" groups="quality.group_quality_user"/>
                </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_lots" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': ['|', '|', ('has_tracking', '=', False), ('state', '!=', 'done'), ('picking_type_code', '!=', 'incoming')]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="count_lots_to_process"/></span>
                        <span class="o_stat_text">Lots to Process</span>
                    </div>
                </button>
                <field name="quality_check_todo" invisible="1"/>
                <button type="object" name="action_view_lots" context="{'show_lots_to_validate': True}" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': ['|', '|', ('quality_check_todo', '=', False), ('state', 'in', ('done', 'cancel')), ('has_tracking', '=', False)]}" groups="quality.group_quality_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="count_lots_to_validate"/></span>
                        <span class="o_stat_text">Lots to Validate</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_picking_internal_search" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.inherited.reception.forms</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <filter name="late" position="before">
                <filter name="count_lots_to_process" string="R&amp;R Creation Required" domain="[('count_lots_to_process', '&gt;', 0), ('state', '=', 'done'), ('picking_type_code', '=', 'incoming')]"/>
                <filter name="count_lots_to_validate" string="R&amp;R Validation Required" domain="[('count_lots_to_validate', '&gt;', 0), ('state', 'not in', ['done', 'cancel']), ('check_ids', '!=', False)]" groups="quality.group_quality_user"/>
                <separator/>
            </filter>
        </field>
    </record>
</odoo>