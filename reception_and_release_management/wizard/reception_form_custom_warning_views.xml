<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="reception_form_custom_warning_view_form" model="ir.ui.view">
        <field name="name">reception.form.custom.warning.view.form</field>
        <field name="model">reception.form.custom.warning</field>
        <field name="arch" type="xml">
            <form string="Warning" class="p-0">
                <script>
                    $(document).ready(function(){
                    $(".modal-header").hide();
                    $(".modal-footer").hide();
                    });
                </script>
                <div class="alert-info p-2 m-0" col="1" role="alert">
                    <i class="fa fa-info-circle fa-3x text-info float-left"
                       style="padding-right: 15px;" role="img" aria-label="Info"
                       title="Info"/>
                    <h4 class="alert-heading pt-3" role="alert"> <field name="title" readonly="1"/></h4>

                    <hr/>
                    <p class="mb-0 pt-2 pl-2">
                        <field name="description" readonly="1"/>
                        <div class="w-100 text-right"><button special="cancel" string="Ok"/></div>
                    </p>
                </div>
                <footer/>
            </form>
        </field>
    </record>
</odoo>