<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">view_production_lot_form_inherited_coa_form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
           <xpath expr="//notebook" position="inside">
                <page string="Certificate of Analysis">
                    <group>
                        <group string="Reception">
                            <field name="packaging_state"/>
                            <field name="coa_appendix"/>
                            <field name="temperature_appendix"/>
                            <field name="supplier_consistency"/>
                            <field name="items_consistency"/>
                            <field name="materials_conformity"/>
                            <field name="reception_comment" attrs="{'invisible': [('coa_appendix', '!=', 'not_done'), ('temperature_appendix', '!=', 'not_done'), ('materials_conformity', '!=', 'no')], 'required': ['|', '|', ('coa_appendix', '=', 'not_done'), ('temperature_appendix', '=', 'not_done'), ('materials_conformity', '=', 'no')]}"/>
                        </group>
                        <group string="Label Preparation">
                            <label for="following_template"/>
                            <div class="o_row">
                                <field name="following_template"/>
                                <field name="total_labels" attrs="{'invisible': [('following_template', '=', False)]}"/>
                                <span attrs="{'invisible': [('following_template', '=', False)]}">labels (n+1)</span>
                            </div>
                            <field name="specimen_sticked"/>
                        </group>
                        <group string="Status">
                            <field name="lot_status"/>
                            <field name="products_sticked"/>
                            <field name="label_reconciliation" attrs="{'invisible': [('products_sticked', '=', False)]}"/>
                            <field name="items_stored"/>
                            <field name="storage_location" attrs="{'invisible': [('items_stored', '=', False)], 'required': [('items_stored', '=', True)]}"/>
                            <label for="storage_temperature" attrs="{'invisible': [('items_stored', '=', False)]}"/>
                            <div class="o_row" attrs="{'invisible': [('items_stored', '=', False)]}">
                                <field name="storage_temperature" attrs="{'required': [('items_stored', '=', True)]}"/>
                                <span attrs="{'invisible': [('storage_temperature', '!=', 'rt')]}">Value</span>
                                <field name="manual_temperature" attrs="{'invisible': [('storage_temperature', '!=', 'rt')]}"/>
                            </div>
                            <field name="status_comment" attrs="{'invisible': [('label_reconciliation', '!=', 'no')], 'required': [('label_reconciliation', '=', 'no')]}"/>
                            <field name="table_update"/>
                        </group>
                    </group>
                </page>
           </xpath>
        </field>
    </record>
</odoo>
